  "bin": {
    "fullstrapp": "index.js"
  },
  "files": [
    "docs/",
    "templates/",
    "README.md",
    "index.js",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "deepmerge": "^3.2.0",
    "envfile": "^3.0.0",
    "fs-extra": "^7.0.1",
    "inquirer": "^6.2.2",
    "os": "^0.1.1",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "test": "echo \"TODO write tests\"",
    "ci": "yarn test",
    "format": "prettier --write --single-quote --no-semi --jsx-single-quote \"{index.js,templates/**/src/**/*.{ts,tsx,js,json,css,md}}\""
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{index.js,templates/**/src/**/*.{ts,tsx,js,json,css,md}}": [
        "prettier --write --single-quote --no-semi --jsx-single-quote",
        "git add"
      ]
    }
  }
}
