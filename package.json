{
  "name": "material-pwa",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "material-ui": "^1.0.0-beta.29",
    "material-ui-icons": "^1.0.0-beta.35",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "tachyons": "^4.9.1",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-react": "^7.7.0",
    "firebase-tools": "^3.17.7",
    "flow-bin": "^0.66.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.2",
    "prettier-standard": "^8.0.0",
    "snazzy": "^7.1.1",
    "source-map-explorer": "^1.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "analyze": "source-map-explorer build/static/js/main.*",
    "ci": "yarn coverage && yarn flow && yarn build",
    "deploy": "yarn build && gh-pages -d build",
    "deploy-prod": "firebase deploy --token \"$FIREBASE_TOKEN\"",
    "eject": "react-scripts eject",
    "flow": "flow check",
    "format": "prettier-standard 'src/**/*.js' --verbose | snazzy"
  },
  "homepage": "https://eddedd88.github.io/material-pwa",
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "flowtype"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
